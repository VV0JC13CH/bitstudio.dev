{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "auto", 
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ]
}